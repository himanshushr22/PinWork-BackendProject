<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1 class="text-xl">Create New Post...</h1>
  <hr class="opacity-10 mt-3">
  <form action="createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2" type="file" name="postImage">
    <input class="block text-black w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
    <textarea class="block text-black w-1/3 h-20 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
    <input class="block w-1/3 px-3 py-2 border-2 mt-2 mb-2 rounded-md bg-blue-600 cursor-pointer" type="submit" value="Post">
  </form>
  <a class="w-1/4 px-3 py-2 border-2 mt-3 rounded-full bg-red-600 block text-center" href="/profile">Cancel</a>
</div>
<% include ./partials/footer.ejs %>


