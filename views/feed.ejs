<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 text-white">
  <div class="cards flex flex-wrap gap-10">
    <% posts.forEach(function(elem){ %>
      <div class=" card w-36 m-5">
        <div class=" w-full h-40 rounded-lg overflow-hidden">
          <img class="w-full h-full rounded-lg object-cover" src="/images/uploads/<%= elem.image %>" alt="">
        </div>
        <h5 class="mt-1 text-md"><%= elem.title %></h5>
        <h6 class=" text-xs font-semibold opacity-60">@<%= elem.user.username %></h6>
      </div>
   <% }) %>
  </div>
</div>



<% include ./partials/footer.ejs %>